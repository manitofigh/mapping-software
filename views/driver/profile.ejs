<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slick</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
  
<body class="bg-gray-900">
    <!-- Static sidebar for desktop -->
    <div class="fixed inset-y-0 z-50 flex w-72 flex-col bg-gray-900 border-r border-gray-500">
      <!-- Sidebar component, swap this element with another sidebar if you like -->
      <div class="flex grow flex-col gap-y-5 overflow-y-auto px-6">
        <div class="flex h-16 shrink-0 items-center">
          <img class="h-20 w-auto" src="https://svgshare.com/i/15N6.svg" alt="Slick">
        </div>
        <nav class="flex flex-1 flex-col">
          <ul role="list" class="flex flex-1 flex-col gap-y-7">
            <li>
              <ul role="list" class="-mx-2 space-y-1">
                <li>
                  <!-- Current: "bg-gray-800 text-white", Default: "text-gray-400 hover:text-white hover:bg-gray-800" -->
                  <a href="/driver/dashboard" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                    <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                    </svg>
                    Dashboard
                  </a>
                </li>
                <li>
                    <a href="/driver/history" class=" text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                      <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                      </svg>
                      History
                    </a>
                  </li>
                <li>
                  <a href="/driver/profile" class="bg-amber-700 text-white group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                    <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Profile
                  </a>
                </li>
              </ul>
            </li>
            <li class="-mx-6 mt-auto">
              <form action="/logout" method="POST" class="flex justify-between items-center px-6 py-3">
                <button type="submit" class="rounded-md bg-amber-700 px-2 py-1 mr-1 text-xs font-normal text-white shadow-sm hover:bg-red-500"> <span aria-hidden="true">&larr;</span> Logout</button>
                
                <a class="text-sm font-normal leading-6 text-white">
                  <%= user.first_name %> <%= user.last_name %> 
                  <span class="ml-1 inline-flex items-center rounded-md bg-green-500/10 px-2 py-1 text-xs font-medium text-green-400 ring-1 ring-inset ring-green-500/20">
                    Admin
                  </span>
                </a>
              </form>
            </li>          
          </ul>
        </nav>
      </div>
    </div>
    <main class="pl-72">
        <div class="px-4 sm:px-6 lg:px-8">
          <% if (typeof errorTitle !== 'undefined' && typeof errorBody !== 'undefined') { %>
            <%- include('../partials/errorNotif.ejs', { errorTitle, errorBody }) %>
          <% } %>
          <% if (typeof successTitle !== 'undefined' && typeof successBody !== 'undefined') { %>
            <%- include('../partials/successNotif.ejs', { successTitle, successBody }) %>
          <% } %>
          <div class="bg-white/5 shadow-sm sm:rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h3 class="text-base font-semibold leading-6 text-white">Change Password</h3>
              <div class="mt-2 max-w-xl text-sm text-gray-400">
                <p>Update your account password.</p>
              </div>
              <form class="mt-5 sm:flex sm:items-center" action="/driver/profile/update-password" method="POST">
                <div class="w-full sm:max-w-xs">
                  <label for="currentPassword" class="sr-only">Current Password</label>
                  <input type="password" name="currentPassword" id="currentPassword" class="block w-full rounded-md border-0 px-2 py-1.5 text-white-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6" placeholder="Current Password">
                </div>
                <div class="w-full sm:max-w-xs mt-3 sm:mt-0 sm:ml-3">
                  <label for="newPassword" class="sr-only">New Password</label>
                  <input type="password" name="newPassword" id="newPassword" class="block w-full rounded-md border-0 px-2 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6" placeholder="New Password">
                </div>
                <div class="w-full sm:max-w-xs mt-3 sm:mt-0 sm:ml-3">
                  <label for="confirmPassword" class="sr-only">Confirm Password</label>
                  <input type="password" name="confirmPassword" id="confirmPassword" class="block w-full rounded-md border-0 px-2 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6" placeholder="Confirm Password">
                </div>px-2 
                <button type="submit" class="mt-3 inline-flex w-full items-center justify-center rounded-md bg-amber-700 px-3 py-2 text-sm border border-transparent hover:border-white font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 sm:mt-0 sm:ml-3 sm:w-auto">
                    Update Password
                </button>
              </form>
            </div>
          </div>
        </div>
      </main>
</body>